<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="${package}.dal.dao.${pathName}.${className}DAO">

   <resultMap type="${package}.dal.entity.${pathName}.${className}DO" id="${classname}Map">
      #foreach($column in $columns)
         <result property="${column.attrname}" column="${column.columnName}" jdbcType="${column.dataType}"/>
      #end
   </resultMap>

   <sql id="Base_Column_List">
      ${allColumnName}
   </sql>

   <sql id="table_name">
      ${tableName}
   </sql>

   <!--插入${comments} -->
   <insert id="insert${className}" parameterType="${package}.dal.entity.${pathName}.${className}DO">
      insert into <include refid="table_name"/> (<include refid="Base_Column_List" />)
      values (${allColumnValue})
      <selectKey resultType="java.lang.Long" keyProperty="id">
         SELECT LAST_INSERT_ID()
      </selectKey>
   </insert>

   #*<!--批量插入${comments} -->
    <insert id="batchInsert${className}" parameterType="${package}.dal.entity.${pathName}.${className}DO" >
        insert into
        <include refid="table_name"/>
        (<include refid="Base_Column_List" />)
        values
        <foreach collection ="${classname}DOList" item="${classname}DO" separator =",">
            (${allColumnValueList})
        </foreach >
    </insert>*#

   <!--修改${comments} -->
   <update id="update${className}" parameterType="${package}.dal.entity.${pathName}.${className}DO" >
      update <include refid="table_name"/>
      <set>
      #foreach($column in $columns)
      #if(${column.attrname}!="id")
         <if test="${column.attrname} != null and ${column.attrname} !=''">
            ${column.columnName} = #{${column.attrname}},
         </if>
      #end
      #end
      </set>
      <where>
         id  = #{id}
      </where>
   </update>

   <!--逻辑删除${comments} -->
   <update id="delete${className}" parameterType="${package}.dal.entity.${pathName}.${className}DO" >
      update <include refid="table_name"/>
      <set>
         is_deleted = #{isDeleted}
      </set>
      <where>
         id = #{id}
      </where>
   </update>

   <!--主键查询${comments} -->
   <select id="get${className}" parameterType="${package}.biz.query.${pathName}.${classQueryName}" resultMap="${classname}Map">
      select
      <include refid="Base_Column_List"/>
      from
      <include refid="table_name"/>
      <where>
         <if test="id != null and id!=''">
            id=#{id}
         </if>
         <if test="isDeleted != null and isDeleted!=''">
            AND is_deleted = #{isDeleted}
         </if>
      </where>
   </select>

   <!--查询${comments}数量 -->
   <select id="get${className}Count" parameterType="${package}.biz.query.${pathName}.${classQueryName}" resultType="java.lang.Long">
      select
      count(id)
      from
      <include refid="table_name"/>
      <where>
         #foreach($column in $columns)
         #if(${column.attrname}!="id")
         <if test="${column.attrname} != null and ${column.attrname} !=''">
            AND ${column.columnName} = #{${column.attrname}}
         </if>
         #end
         #end
      </where>
   </select>

   <!--查询${comments}列表 -->
   <select id="get${className}List" parameterType="${package}.biz.query.${pathName}.${classQueryName}" resultMap="${classname}Map">
      select
      <include refid="Base_Column_List"/>
      from
      <include refid="table_name"/>
      <where>
         #foreach($column in $columns)
         #if(${column.attrname}!="id")
         <if test="${column.attrname} != null and ${column.attrname} !=''">
            AND ${column.columnName} = #{${column.attrname}}
         </if>
         #end
         #end
      </where>
   </select>

   <!--查询${comments}分页 -->
   <select id="get${className}Page" parameterType="${package}.biz.query.${pathName}.${classQueryName}" resultMap="${classname}Map">
      select
      <include refid="Base_Column_List"/>
      from
      <include refid="table_name"/>
      <where>
         #foreach($column in $columns)
         #if(${column.attrname}!="id")
         <if test="${column.attrname} != null and ${column.attrname} !=''">
            AND ${column.columnName} = #{${column.attrname}}
         </if>
         #end
         #end
      </where>
      order by gmt_modified desc
      limit #{offset},#{limit}
   </select>

</mapper>